        </activity>
        <!-- add activity-->
        <activity
            android:name=".ui.ListViewActivity"
            android:theme="@style/JK.SwipeBack.Transparent.Theme"><!--动画style-->
        </activity>
        <activity
            android:name=".ui.BigHandActivity"
            android:theme="@style/JK.SwipeBack.Transparent.Theme">
